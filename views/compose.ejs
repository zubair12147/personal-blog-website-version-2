<%- include('partials/header') %>

<h1>Compose</h1>
<form action="/" method="post">
    <div class="form-group">
        <label for="entry">Title</label>
        <input class="form-control" type="text" name="entry" id="entry">
    </div>
    <div class="form-group">
        <label for="post">Post</label>
        <textarea name="post" id="post" rows="6" class="form-control"></textarea>
    </div>

    <button class="btn-primary btn btn-lg" type="submit">Publish</button>
</form>

